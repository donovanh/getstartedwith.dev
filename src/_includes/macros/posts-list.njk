{%- macro postsList(posts) -%}
{%- from "macros/tags-list.njk" import tagsList %}

<ul class="post-list">
    {% for post in posts | sortDesc %}
    <li class="post-list-item">
        <span class="post-list-item-cover" aria-hidden="true">
            <a href="{{ post.url }}">
              <img src="/assets/img/books/{{ post.data.cover_medium }}" alt="Book: {{ post.data.title }}" longdesc="{{ post.data.description }}" />
            </a>
        </span>
        <span class="post-list-item-text">
          <h2 class="post-list-item-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
          <p class="post-list-item-excerpt">
              {{ post.data.description }}
          </p>
        </span>
    </li>
    {% endfor %}
</ul>
{% endmacro %}