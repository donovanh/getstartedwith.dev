{%- macro postsList(posts) -%}
{%- from "macros/tags-list.njk" import tagsList %}

<ul class="post-list">
    {% for post in posts | sortDesc %}
    <li class="post-list-item">
        <h2 class="post-list-item-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <p class="post-list-item-excerpt">
            {{ post.data.description }}
        </p>
    </li>
    {% endfor %}
</ul>
{% endmacro %}